<%=form_for @user_session do |f| %>
  <p>
  <%= f.label :login %>
  <%= f.text_field :login %>  
  </p>
  
   <p>
  <%= f.label :password %>
  <%= f.password_field :password %>  
  </p>
  
   <p>
  <%= f.label :remember_me %>
  <%= f.check_box :remember_me %>  
  </p>
  
  <%= f.submit 'Authentication' %>
  
<% end %>

<%= link_to 'Go host', root_path %>
